<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MascotaApp.MVVM.View.AdoptaView"
            >
    <StackLayout BackgroundColor="White" Padding="20" Spacing="20">
        <Image Source="{Binding AnimalSelected.ImgAnimal}" HeightRequest="200" />
        <Label Text="{Binding AnimalSelected.Name}" FontSize="24" TextColor="Black" HorizontalOptions="Center" />
        <Label Text="{Binding AnimalSelected.Raza}" FontSize="18" TextColor="Black" HorizontalOptions="Center" />
        <Button Command="{Binding AdoptCommand}" Text="Adoptar"/>
        <Button Clicked="Button_Clicked" Text="Seguir viendo"/>
    </StackLayout>
</ContentPage>