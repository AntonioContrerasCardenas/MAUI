<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.BindingModes"
             Title="BindingModes">
    <VerticalStackLayout>
        <Entry Placeholder="Origen" x:Name="Origen" Text="Origen" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Entry Placeholder="Destino" Text="{Binding Source={x:Reference Origen}, Path=Text, Mode=TwoWay}"/>

    </VerticalStackLayout>
</ContentPage>