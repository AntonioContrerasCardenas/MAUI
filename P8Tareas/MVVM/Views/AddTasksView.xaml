<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P8Tareas.MVVM.Views.AddTasks"
             Title="Agregar nueva tarea">
    <Grid RowDefinitions="2*, 7*, *">
        <Entry Grid.Row="0" Placeholder="Introduce Nueva Tarea" Text="{Binding Task}"/>
        <CollectionView Grid.Row="1" Margin="15" ItemsSource="{Binding Categories}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout HorizontalItemSpacing="5" Orientation="Vertical" Span="2" VerticalItemSpacing="5"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame>
                        <RadioButton Content="{Binding Nombre}" GroupName="Category" IsChecked="{Binding IsSelected}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Grid.Row="2" Margin="10" HorizontalOptions="CenterAndExpand" Spacing="16" VerticalOptions="Center">
            <Button CornerRadius="15" Clicked="Button_Clicked" Text="Agregar tarea"/>
            <Button CornerRadius="15" Text="Agregar categoria"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>