<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P8Tareas.MVVM.Views.MainPageView"
             Title="Mis Tareas">
    <Grid RowDefinitions="*,3*,5*">
        <Grid Grid.Row="0">
            <Label Text="Mis tarreas" BackgroundColor="#80177a"/>
        </Grid>

        <Grid Grid.Row="1" RowDefinitions="*, *,3*">
            <Label Grid.Row="0" Text="Mis Tareas"/>
            <Label Grid.Row="1" Text="CATEGORIAS" />

            <CollectionView Grid.Row="2" ItemsSource="{Binding Categorias}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="5" Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BackgroundColor="LightGray" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label TextColor="Black" Text="{Binding Tareas.Count, StringFormat='{0} Tasks'}"/>
                                <Label TextColor="Black" Text="{Binding Nombre}" FontSize="20" FontAttributes="Bold"/>
                                <ProgressBar Progress="{Binding PorcentajeCompletadas}" />
                                <Label TextColor="Black" Text="{Binding PorcentajeCompletadas, StringFormat='Completado: {0:F1}%'}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <Grid Grid.Row="2" RowDefinitions="2*,8*">

            <Label Grid.Row="0" Text="Tareas pendientes"/>
            <CollectionView Grid.Row="1" ItemsSource="{Binding AllTareas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Transparent">
                            <HorizontalStackLayout Spacing="10">
                                <CheckBox CheckedChanged="checkBoxCompletTaks_CheckedChanged" x:Name="checkBoxCompletTaks" IsChecked="{Binding EstaCompletada}" VerticalOptions="Center"/>
                                <Label Text="{Binding Nombre}" VerticalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                             Binding="{Binding EstaCompletada}"
                                             Value="True">
                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                            <Setter Property="TextColor" Value="Gray"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Grid.Row="2" Clicked="Button_Clicked" HeightRequest="30" VerticalOptions="End" HorizontalOptions="End" WidthRequest="30" CornerRadius="20" Text="+"/>
        </Grid>
    </Grid>
</ContentPage>